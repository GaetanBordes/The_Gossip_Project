<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h2 class="mt-5">Inscription</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "needs-validation", novalidate: true }) do |f| %>
        <% if resource.errors.any? %>
          <div id="error_explanation" class="alert alert-danger">
            <h4><%= pluralize(resource.errors.count, "error") %> prohibited this <%= resource_name.to_s.classify %> from being saved:</h4>
            <ul>
              <% resource.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.label :email, class: "control-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true %>
          <div class="invalid-feedback">
            Veuillez fournir une adresse email valide.
          </div>
        </div>

        <div class="form-group">
          <%= f.label :password, class: "control-label" %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", required: true %>
          <div class="invalid-feedback">
            Veuillez entrer un mot de passe.
          </div>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, class: "control-label" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", required: true %>
          <div class="invalid-feedback">
            Veuillez confirmer votre mot de passe.
          </div>
        </div>

        <!-- Champs personnalisés -->
        <div class="form-group">
          <%= f.label :first_name, "Ton prénom", class: "control-label" %>
          <%= f.text_field :first_name, class: "form-control", required: true %>
          <div class="invalid-feedback">
            Veuillez entrer votre prénom.
          </div>
        </div>

        <div class="form-group">
          <%= f.label :last_name, "Ton nom", class: "control-label" %>
          <%= f.text_field :last_name, class: "form-control", required: true %>
          <div class="invalid-feedback">
            Veuillez entrer votre nom.
          </div>
        </div>

        <div class="form-group">
          <%= f.label :city, "Entrez votre ville", class: "control-label" %>
          <%= f.text_field :city, class: "form-control", required: true %>
          <div class="invalid-feedback">
            Veuillez entrer votre ville.
          </div>
        </div>

        <div class="form-group">
          <%= f.label :description, "Ta description", class: "control-label" %>
          <%= f.text_area :description, class: "form-control", required: true %>
          <div class="invalid-feedback">
            Veuillez entrer une description.
          </div>
        </div>

        <div class="form-group">
          <%= f.label :birthdate, "Ta date de naissance", class: "control-label" %>
          <%= f.date_field :birthdate, class: "form-control", required: true %>
          <div class="invalid-feedback">
            Veuillez entrer votre date de naissance.
          </div>
        </div>

        <div class="actions">
          <%= f.submit "S'inscrire", class: "btn btn-primary" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
