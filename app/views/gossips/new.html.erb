<div class="container mt-5">
  <h1 class="text-center mb-4">Publier un nouveau potin</h1>
  <div class="card shadow-sm">
    <div class="card-body">
      <%= form_with(url: publish_path, method: :post, class: "row g-3") do |form| %>
        <div class="col-md-6">
          <%= form.label :first_name, "Ton prÃ©nom", class: "form-label" %>
          <%= form.text_field :first_name, class: "form-control" %>
        </div>
        
        <div class="col-md-6">
          <%= form.label :last_name, "Ton nom", class: "form-label" %>
          <%= form.text_field :last_name, class: "form-control" %>
        </div>

        <div class="col-md-6">
          <%= form.label :email, "Ton email", class: "form-label" %>
          <%= form.email_field :email, class: "form-control" %>
        </div>

        <div class="col-md-6">
          <%= form.label :city, "Ta ville", class: "form-label" %>
          <%= form.text_field :city, class: "form-control" %>
        </div>

        <div class="col-12">
          <%= form.label :title, "Titre du potin", class: "form-label" %>
          <%= form.text_field :title, class: "form-control" %>
        </div>

        <div class="col-12">
          <%= form.label :content, "Contenu du potin", class: "form-label" %>
          <%= form.text_area :content, rows: 4, class: "form-control" %>
        </div>

        <div class="col-12 text-center">
          <%= form.submit "Publier ton potin", class: "btn btn-primary" %>

          <% if flash[:alert] %>
        <div class="alert alert-danger">
          <%= flash[:alert] %>
        </div>
      <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
