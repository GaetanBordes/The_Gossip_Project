<div class="container mt-5">
  <h1 class="text-center mb-4">Publier un nouveau potin</h1>
  <div class="card shadow-sm">
    <div class="card-body">
      
      <!-- Formulaire -->
      <%= form_with(model: @gossip, local: true, class: "row g-3") do |form| %>

        <!-- Titre du potin -->
        <div class="col-12">
          <%= form.label :title, "Titre du potin", class: "form-label" %>
          <%= form.text_field :title, class: "form-control" %>
        </div>

        <!-- Contenu du potin -->
        <div class="col-12">
          <%= form.label :content, "Contenu du potin", class: "form-label" %>
          <%= form.text_area :content, rows: 4, class: "form-control" %>
        </div>

        <!-- Bouton de soumission -->
        <div class="col-12 text-center">
          <%= form.submit "Publier ton potin", class: "btn btn-primary" %>
        </div>

      <% end %>
    </div>
  </div>

  <!-- Affichage des alertes si nÃ©cessaire -->
  <% if flash[:alert] %>
    <div class="alert alert-danger mt-3">
      <%= flash[:alert] %>
    </div>
  <% end %>

</div>
